@model List<WebApplication1.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<div class="container py-5">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h2 class="fw-bold mb-0"><i class="fas fa-box me-2 text-primary"></i>My Orders</h2>
    </div>

    <div class="d-flex gap-2 mb-4 flex-wrap">
        @foreach (var (label, val) in new[] { ("All", ""), ("Pending", "Pending"), ("Processing", "Processing"), ("Shipped", "Shipped"), ("Delivered", "Delivered") })
        {
            <a href="/Order?status=@val"
               class="btn btn-sm @(ViewBag.CurrentStatus?.ToString() == val ? "btn-primary" : "btn-outline-secondary")">
                @label
            </a>
        }
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="text-center py-5">
            <i class="fas fa-box-open fa-4x text-muted mb-4 opacity-25"></i>
            <h4 class="text-muted">No orders found</h4>
            <a href="/Product" class="btn btn-primary mt-2">Start Shopping</a>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Order #</th>
                            <th>Date</th>
                            <th>Items</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td><span class="fw-semibold text-primary">#@order.Id</span></td>
                                <td>@order.CreatedAt.ToString("MMM d, yyyy")</td>
                                <td><span class="text-muted">@order.ShippingAddress</span></td>
                                <td class="fw-semibold">$@order.TotalAmount.ToString("N2")</td>
                                <td>
                                    @{
                                        var badgeClass = order.Status switch
                                        {
                                            "Delivered"  => "bg-success",
                                            "Shipped"    => "bg-info",
                                            "Processing" => "bg-warning text-dark",
                                            _            => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass rounded-pill px-3">@order.Status</span>
                                </td>
                                <td>
                                    <a href="/Order/Details/@order.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye me-1"></i>Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
