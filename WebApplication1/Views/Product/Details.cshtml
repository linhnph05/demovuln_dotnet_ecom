@model WebApplication1.Models.Product
@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
            <li class="breadcrumb-item"><a href="/Product" class="text-decoration-none">Products</a></li>
            <li class="breadcrumb-item"><a href="/Product?category=@Model.Category" class="text-decoration-none">@Model.Category</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row g-5">
        <!-- Image -->
        <div class="col-lg-5">
            <div class="product-detail-img-wrap rounded-4 overflow-hidden shadow">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid w-100" style="aspect-ratio:4/3;object-fit:cover;"/>
            </div>
        </div>

        <!-- Details -->
        <div class="col-lg-7">
            <span class="badge bg-primary-soft text-primary mb-2">@Model.Category</span>
            <h1 class="fw-bold mb-3">@Model.Name</h1>

            <div class="d-flex align-items-center gap-3 mb-3">
                <div class="text-warning">
                    <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
                    <i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i>
                </div>
                <span class="text-muted small">(@Model.Reviews.Count reviews)</span>
            </div>

            <div class="display-6 fw-bold text-primary mb-4">$@Model.Price.ToString("N2")</div>

            <p class="text-muted mb-4 lh-lg">@Model.Description</p>

            <div class="d-flex align-items-center gap-3 mb-4">
                @if (Model.Stock > 0)
                {
                    <span class="badge bg-success-soft text-success px-3 py-2 rounded-pill">
                        <i class="fas fa-check-circle me-1"></i>In Stock (@Model.Stock)
                    </span>
                }
                else
                {
                    <span class="badge bg-danger-soft text-danger px-3 py-2 rounded-pill">
                        <i class="fas fa-times-circle me-1"></i>Out of Stock
                    </span>
                }
            </div>

            @if (Model.Stock > 0)
            {
                <form asp-controller="Cart" asp-action="Add" method="post" class="d-flex gap-3 align-items-center">
                    <input type="hidden" name="productId" value="@Model.Id"/>
                    <div class="input-group" style="width:120px">
                        <button class="btn btn-outline-secondary" type="button" onclick="changeQty(-1)">-</button>
                        <input type="number" name="quantity" id="qtyInput" class="form-control text-center" value="1" min="1" max="@Model.Stock"/>
                        <button class="btn btn-outline-secondary" type="button" onclick="changeQty(1)">+</button>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg px-4 flex-grow-1">
                        <i class="fas fa-cart-plus me-2"></i>Add to Cart
                    </button>
                </form>
            }

            <div class="row g-3 mt-4">
                <div class="col-4 text-center">
                    <div class="feature-chip"><i class="fas fa-truck text-primary mb-1 d-block"></i><small>Free Shipping</small></div>
                </div>
                <div class="col-4 text-center">
                    <div class="feature-chip"><i class="fas fa-undo text-primary mb-1 d-block"></i><small>30-Day Returns</small></div>
                </div>
                <div class="col-4 text-center">
                    <div class="feature-chip"><i class="fas fa-shield-alt text-primary mb-1 d-block"></i><small>2 Year Warranty</small></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reviews -->
    <div class="row mt-5">
        <div class="col-12">
            <h3 class="fw-bold mb-4"><i class="fas fa-comments me-2 text-primary"></i>Customer Reviews</h3>

            @if (Model.Reviews.Count == 0)
            {
                <div class="text-muted py-4 text-center">
                    <i class="fas fa-comment-slash fa-2x mb-3 opacity-50"></i>
                    <p>No reviews yet. Be the first!</p>
                </div>
            }
            else
            {
                <div class="row g-3 mb-4">
                    @foreach (var rv in Model.Reviews)
                    {
                        <div class="col-md-6">
                            <div class="review-card card border-0 shadow-sm p-4">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="avatar-sm">@rv.Username[0].ToString().ToUpper()</div>
                                        <div>
                                            <div class="fw-semibold small">@rv.Username</div>
                                            <div class="text-muted" style="font-size:0.75rem">@rv.CreatedAt.ToString("MMM d, yyyy")</div>
                                        </div>
                                    </div>
                                    <div class="text-warning small">
                                        @for (var i = 1; i <= 5; i++)
                                        { <i class="fas fa-star @(i <= rv.Rating ? "" : "text-muted opacity-25")"></i> }
                                    </div>
                                </div>
                                <p class="mb-0 text-muted small">@rv.Comment</p>
                            </div>
                        </div>
                    }
                </div>
            }

            @if (Context.Session.GetString("UserId") != null)
            {
                <div class="card border-0 shadow-sm p-4">
                    <h5 class="fw-semibold mb-3">Write a Review</h5>
                    <form asp-controller="Product" asp-action="AddReview" method="post">
                        <input type="hidden" name="productId" value="@Model.Id"/>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Rating</label>
                            <div class="star-rating d-flex gap-2">
                                @for (var i = 5; i >= 1; i--)
                                {
                                    <input type="radio" name="rating" id="star@i" value="@i" class="d-none" @(i == 5 ? "checked" : "")/>
                                    <label for="star@i" class="star-label fs-4" title="@i stars"><i class="fas fa-star"></i></label>
                                }
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Comment</label>
                            <textarea name="comment" class="form-control" rows="3" placeholder="Share your experienceâ€¦" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fas fa-paper-plane me-2"></i>Submit Review
                        </button>
                    </form>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    <a asp-controller="Account" asp-action="Login">Login</a> to write a review.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
<script>
function changeQty(delta) {
    const inp = document.getElementById('qtyInput');
    const val = parseInt(inp.value) + delta;
    inp.value = Math.max(1, Math.min(@Model.Stock, val));
}
</script>
}
