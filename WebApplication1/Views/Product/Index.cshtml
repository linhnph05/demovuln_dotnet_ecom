@model List<WebApplication1.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<div class="container py-5">
    <div class="row g-4">
        <!-- Sidebar filters -->
        <div class="col-lg-3">
            <div class="card border-0 shadow-sm p-4 sticky-top" style="top:80px">
                <h5 class="fw-bold mb-4"><i class="fas fa-filter me-2 text-primary"></i>Filters</h5>

                <div class="mb-4">
                    <div class="fw-semibold small mb-3 text-uppercase text-muted">Category</div>
                    <div class="d-flex flex-column gap-2">
                        <a href="/Product" class="filter-link @(ViewBag.CurrentCategory == null ? "active" : "")">All Categories</a>
                        @foreach (var cat in (List<string>)(ViewBag.Categories ?? new List<string>()))
                        {
                            <a href="/Product?category=@cat&sort=@ViewBag.Sort"
                               class="filter-link @(ViewBag.CurrentCategory == cat ? "active" : "")">@cat</a>
                        }
                    </div>
                </div>

                <div>
                    <div class="fw-semibold small mb-3 text-uppercase text-muted">Sort By</div>
                    <div class="d-flex flex-column gap-2">
                        @foreach (var (label, val) in new[] { ("Name A-Z",""), ("Price: Low to High","price_asc"), ("Price: High to Low","price_desc"), ("Newest","newest") })
                        {
                            <a href="/Product?category=@ViewBag.CurrentCategory&sort=@val"
                               class="filter-link @(ViewBag.Sort?.ToString() == val ? "active" : "")">@label</a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Product grid -->
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="fw-bold mb-0">@(ViewBag.CurrentCategory ?? "All Products")</h4>
                    <div class="text-muted small">@(Model?.Count ?? 0) products</div>
                </div>
            </div>

            @if (Model == null || Model.Count == 0)
            {
                <div class="text-center py-5 text-muted">
                    <i class="fas fa-box-open fa-3x mb-3 opacity-50"></i>
                    <p>No products in this category.</p>
                </div>
            }
            else
            {
                <div class="row row-cols-1 row-cols-sm-2 row-cols-xl-3 g-4">
                    @foreach (var p in Model)
                    {
                        <div class="col">
                            <div class="product-card h-100">
                                <a href="/Product/Details/@p.Id" class="text-decoration-none">
                                    <div class="product-img-wrap">
                                        <img src="@p.ImageUrl" alt="@p.Name" class="product-img"/>
                                        @if (p.Stock == 0)
                                        {
                                            <span class="badge bg-secondary product-badge">Out of Stock</span>
                                        }
                                        else if (p.Stock < 10)
                                        {
                                            <span class="badge bg-warning text-dark product-badge">Low Stock</span>
                                        }
                                    </div>
                                    <div class="p-3">
                                        <span class="badge bg-primary-soft text-primary small mb-1">@p.Category</span>
                                        <h6 class="product-name fw-semibold mb-2">@p.Name</h6>
                                        <p class="text-muted small mb-2" style="display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;overflow:hidden">@p.Description</p>
                                        <div class="d-flex align-items-center justify-content-between">
                                            <span class="product-price">$@p.Price.ToString("N2")</span>
                                            <small class="text-muted">@p.Stock in stock</small>
                                        </div>
                                    </div>
                                </a>
                                <div class="p-3 pt-0">
                                    <form asp-controller="Cart" asp-action="Add" method="post">
                                        <input type="hidden" name="productId" value="@p.Id"/>
                                        <input type="hidden" name="quantity" value="1"/>
                                        <button type="submit" class="btn btn-primary w-100 btn-sm" @(p.Stock == 0 ? "disabled" : "")>
                                            <i class="fas fa-cart-plus me-1"></i>Add to Cart
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
